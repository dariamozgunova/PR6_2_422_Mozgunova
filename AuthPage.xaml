<Page x:Class="PR6.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR6"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Авторизация">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Авторизация" FontSize="16" Margin="0,0,0,20" HorizontalAlignment="Center" FontWeight="Bold"/>

            <TextBlock Text="Введите логин (почта):" Margin="0,0,0,5"/>
            <TextBox x:Name="TextBoxLogin" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Введите пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,0,0,20"/>

            <Button x:Name="btnLogin" Content="Войти" Width="100" Margin="0,0,0,10" Click="ButtonEnter_OnClick"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnRegister" Content="Зарегистрироваться" Background="Transparent" BorderThickness="0" Foreground="Blue" FontSize="12" Click="btnRegister_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
